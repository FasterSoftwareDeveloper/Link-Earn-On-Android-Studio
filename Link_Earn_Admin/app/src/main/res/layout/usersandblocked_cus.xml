<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<com.google.android.material.card.MaterialCardView
		android:id="@+id/mainBody"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		app:cardBackgroundColor="@color/bottom_sheet"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/linear21"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear19"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/Ranktext"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="1"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:rotation="10" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear20"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="3dp"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1">
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/icon"
					android:focusable="false"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_marginLeft="7dp"
					android:src="@drawable/profile_logo"
					app:civ_border_width="0dp"
					app:civ_border_overlay="true" />
				<TextView
					android:id="@+id/name"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Loading..."
					android:textSize="16sp"
					android:textColor="@color/Text_Color" />
				<TextView
					android:id="@+id/balance"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:text="â€¢ 0.000$"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="@color/gradient_middle"
					android:layout_weight="1" />
				<Button
					android:id="@+id/button_unblock"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="9dp"
					android:padding="8dp"
					android:text="Unblock"
					android:textSize="14sp"
					android:textColor="@color/Text_Color"
					style="@style/Widget.Material3.Button.TextButton"
					app:backgroundTint="@color/LowDarkBlue" />
			</LinearLayout>
		</LinearLayout>
	</com.google.android.material.card.MaterialCardView>
</LinearLayout>
