<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:scrollbars="none">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="@color/DarkBlue"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_marginTop="10dp"
				android:src="@drawable/logo"
				android:scaleType="fitXY" />
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="10dp"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="3dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Welcome to"
				android:textSize="20sp"
				android:textColor="@color/Text_Color" />
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:text="the new LinkEarn"
				android:textSize="20sp"
				android:textColor="@color/Text_Color" />
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/featureAcccount"
				android:layout_width="300dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="50dp"
				android:orientation="horizontal"
				app:cardBackgroundColor="@color/DarkBlue"
				app:strokeColor="@color/colorSurface">
				<LinearLayout
					android:id="@+id/linear20"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear21"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview6"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/icon_account"
							android:scaleType="fitXY" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear22"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/textview11"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:text="Account"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="@color/md_theme_light_errorContainer" />
						<TextView
							android:id="@+id/textview12"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Create and manage your profile, track progress, and secure your earnings all in one place."
							android:textSize="16sp"
							android:textColor="@color/colorPrimary" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/feature1"
				android:layout_width="300dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="50dp"
				android:orientation="horizontal"
				app:cardBackgroundColor="@color/DarkBlue"
				app:strokeColor="@color/colorSurface">
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear4"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/icon_ads_click_round"
							android:scaleType="fitXY" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear5"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/textview3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:text="Task income"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="@color/md_theme_light_errorContainer" />
						<TextView
							android:id="@+id/textview4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Earn easily by completing tasks like visiting websites or completing short links."
							android:textSize="16sp"
							android:textColor="@color/colorPrimary" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/futures2"
				android:layout_width="300dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="50dp"
				android:orientation="horizontal"
				app:cardBackgroundColor="@color/DarkBlue"
				app:strokeColor="@color/colorSurface">
				<LinearLayout
					android:id="@+id/linear7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/icon_stacked"
							android:scaleType="fitXY" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear9"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/textview5"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:text="Task Publish"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="@color/md_theme_light_errorContainer" />
						<TextView
							android:id="@+id/textview6"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Publish tasks with detailed instructionsâ€”free or with a small fee. Simple and efficient!"
							android:textSize="16sp"
							android:textColor="@color/colorPrimary" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>
			<com.google.android.material.card.MaterialCardView
				android:id="@+id/feature3"
				android:layout_width="300dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="50dp"
				android:orientation="horizontal"
				app:cardBackgroundColor="@color/DarkBlue"
				app:strokeColor="@color/colorSurface">
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear12"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/icon_balance_wallet"
							android:scaleType="fitXY" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/textview7"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:text="Task Payment"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="@color/md_theme_light_errorContainer" />
						<TextView
							android:id="@+id/textview8"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:text="Withdraw your earnings directly after task completion through our secure system."
							android:textSize="16sp"
							android:textColor="@color/colorPrimary" />
					</LinearLayout>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>
			<LinearLayout
				android:id="@+id/linear14"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="1" />
			<Button
				android:id="@+id/button1"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="60dp"
				android:padding="8dp"
				android:text="Get started"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="@color/Text_Color"
				style="?attr/materialButtonOutlinedStyle" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>
