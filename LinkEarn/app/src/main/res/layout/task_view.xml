<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:scrollbars="none">
		<LinearLayout
			android:id="@+id/body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/DarkBlue"
			android:orientation="vertical">
			<RelativeLayout
				android:id="@+id/task_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp">
				<com.airbnb.lottie.LottieAnimationView
					android:id="@+id/lottie1"
					android:layout_width="match_parent"
					android:layout_height="300dp"
					android:layout_marginTop="10dp"
					android:scaleType="fitCenter"
					android:layout_centerInParent="true"
					app:lottie_fileName="task.json"
					app:lottie_loop="true"
					app:lottie_autoPlay="true"
					android:layout_alignParentTop="true"
					android:layout_centerHorizontal="true" />
				<TextView
					android:id="@+id/title_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Loading...."
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="@color/md_theme_dark_primary"
					android:layout_below="@id/lottie1"
					android:layout_centerHorizontal="true" />
				<TextView
					android:id="@+id/description_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="Loading...."
					android:textSize="16sp"
					android:textColor="@color/md_theme_light_errorContainer"
					android:layout_below="@id/title_txt"
					android:layout_centerHorizontal="true" />
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linear1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:padding="5dp"
					android:orientation="horizontal"
					android:layout_below="@id/linear3">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="Country restriction:"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="@color/colorSurface" />
						<TextView
							android:id="@+id/country_txt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="5dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="8dp"
							android:text="loading...."
							android:textSize="16sp"
							android:textColor="@color/colorError" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linear3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:padding="5dp"
					android:orientation="horizontal"
					android:clickable="true"
					android:focusable="true"
					android:layout_below="@id/description_txt"
					android:layout_centerHorizontal="true">
					<LinearLayout
						android:id="@+id/linear4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="3dp"
							android:paddingBottom="8dp"
							android:text="Copy description text"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="@color/colorError" />
						<ImageView
							android:id="@+id/imageview1"
							android:layout_width="25dp"
							android:layout_height="25dp"
							android:src="@drawable/icon_content_copy"
							android:scaleType="fitXY" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linear5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:layout_marginBottom="10dp"
					android:padding="5dp"
					android:orientation="horizontal"
					android:layout_below="@id/linear1">
					<LinearLayout
						android:id="@+id/linear6"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview5"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="Website visiting time:"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="@color/colorSurface" />
						<TextView
							android:id="@+id/time_txt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="5dp"
							android:paddingTop="8dp"
							android:paddingRight="1dp"
							android:paddingBottom="8dp"
							android:text="loading...."
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
						<TextView
							android:id="@+id/textview14"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="2dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="8dp"
							android:text="seconds"
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linear7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:layout_marginBottom="10dp"
					android:padding="5dp"
					android:orientation="horizontal"
					android:layout_below="@id/linear5">
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview7"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="Number of persons who completed:"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="@color/colorSurface" />
						<TextView
							android:id="@+id/completed_txt"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="5dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="loading...."
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
						<TextView
							android:id="@+id/textview12"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="2dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="8dp"
							android:text="person"
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="10dp"
					android:layout_marginRight="15dp"
					android:layout_marginBottom="10dp"
					android:padding="5dp"
					android:orientation="horizontal"
					android:layout_below="@id/linear7">
					<LinearLayout
						android:id="@+id/linear10"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview9"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="To do the task you will be given:"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="@color/colorSurface" />
						<TextView
							android:id="@+id/dollars"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="5dp"
							android:paddingTop="8dp"
							android:paddingBottom="8dp"
							android:text="loading...."
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
						<TextView
							android:id="@+id/textview11"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="2dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="8dp"
							android:text="$"
							android:textSize="16sp"
							android:textColor="@color/gradient_end" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:gravity="center_horizontal"
					android:orientation="horizontal"
					android:layout_below="@id/linear9">
					<Button
						android:id="@+id/button1"
						android:layout_width="150dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Cancel"
						android:textSize="16sp"
						android:textColor="@color/colorSurface"
						style="?attr/materialButtonOutlinedStyle" />
					<Button
						android:id="@+id/button3"
						android:layout_width="150dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:padding="8dp"
						android:text="Ok, Do it"
						android:textSize="16sp"
						android:textColor="@color/DarkBlue"
						style="@style/Widget.Material3.Button.ElevatedButton"
						app:backgroundTint="@color/colorAccent" />
				</LinearLayout>
			</RelativeLayout>
			<LinearLayout
				android:id="@+id/error_body"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1"
				android:visibility="gone">
				<TextView
					android:id="@+id/error_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="3dp"
					android:paddingBottom="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="You are not logged into any account so login quickly and enter the link."
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="@color/colorError" />
				<Button
					android:id="@+id/error_bt_txt"
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:padding="8dp"
					android:text="Authentication Now!"
					android:textSize="16sp"
					android:textColor="@color/colorSurface"
					style="?attr/materialButtonOutlinedStyle" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
